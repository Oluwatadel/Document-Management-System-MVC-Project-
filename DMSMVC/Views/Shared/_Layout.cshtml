<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Web</title>
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> *@
    @* <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" /> *@
    <link rel="stylesheet" href="~/css/Style.css" asp-append-version="true" />
    @* <link rel="stylesheet" href="~/Web.styles.css" asp-append-version="true" /> *@
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">

                <div class="but">
                    
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                            <img src="~/images/AIRIS-Photoroom.png-Photoroom.png" alt="Alternate Text" />
                        </a>
                        <ul class="link">
                            <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                            <li><a asp-area="" asp-controller="" asp-action="">About DMS</a></li>
                            <li><a asp-area ="" asp-controller="" asp-action="">FAQ</a></li>
                        </ul>
                    </div>

                </div>
                <div class="rightSide">
                    <button class="btn">
                        <a asp-action = "Login" asp-controller="User">Login</a>
                    </button>
                    <input class="Search" type="text" placeholder="Search">

                </div>
            </div>

        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <section class="newsletter">
        <div class="container down">
            <h1>Subscribe To Our Newsletter</h1>
            <form action="">
                <input type="email" placeholder="Enter Email...">
                <button type="submit" class="btn-1">Subscribe</button>
            </form>
        </div>
    </section>
    <footer>
        <p><strong>AIRIS Technovation, Copyright</strong> &copy; 2023</p>
        <section class="social-hand">
            <div class="social-fb"><a href="#"><i class="fa fa-facebook"></i></a></div>
            <div class="social-twit"><a href="#"><i class="fa fa-twitter"></a></div>
            <div class="social-what"><a href="#"><i class="fa fa-whatsapp"></a></div>
        </section>
    </footer>

</body>
</html>
