@using DMSMVC.Models.DTOs
@using DMSMVC.Models.RequestModel;
@model DMSMVC.Models.RequestModel.StaffDetailsModel;

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Staff update</title>
        <link rel="stylesheet" href="~/css/Register.css">
        <link rel="stylesheet" href="~/css/Create.css">
    </head>
    <body>
        <div class="container-outer">
            @if (TempData["Error"] != null)
            {
                <p class="alert">@TempData["Error"]</p>
            }
            <div class="containercontain">
                <div class="reg">
                <h2>staff Update Form</h2>
            </div>
                <form class="wrapper" method="post" enctype="multipart/form-data">
                    <div class="form">
                        <div class="inner">
                            <label>Last Name</label>
                            <input type="text" name="LastName" id="" placeholder="Enter your Last Name" required>
                        </div>
                        <div class="inner">
                            <label>First Name</label>
                            <input type="text" name="FirstName" id="" placeholder="Enter your First Name" required>
                        </div>
                    </div>
                    <div class="form">
                        <div class="inner">
                            <label>Phone Number</label>
                            <input type="tel" name="PhoneNumber" id="" placeholder="Enter your PhoneNumber" required>
                        </div>
                        <div class="inner">
                            <label>Email</label>
                            <input type="email" name="Email" id="email" value="@ViewBag.Email" required readonly>
                        </div>
                    </div>
                    <div class="form">
                        <div class="inner">
                            <label>Staff Number</label>
                            <input type="text" name="StaffNumber" id="" placeholder="Enter you staff id">
                        </div>
                        <div class="inner">
                            <label>Grade Level</label>
                            <input type="text" name="Level" id="" placeholder="Enter your grade level" required>
                        </div>
                    </div>
                    <div class="form">
                        <div class="inner">
                            <label>Department</label>
                            <select name="DepartmentId" asp-items="ViewBag.departments">
                            </select>
                            @* <select asp-for="DepartmentId" class="department">
                                <option>Select your Department</option>
                                @foreach(var department in departments)
                                {
                                    <option>@department</option>
                                }
                            </select> *@
                        </div>
                        <div class="inner">
                            <label>Gender</label>
                            <select asp-for="Gender" asp-items="@Html.GetEnumSelectList(typeof(GenderEnum))" re></select>
                        </div>
                    </div>
                    <div class="imageUpload">
                        <input type="file" name="ProfilePhotoUrl" />
                    </div>
                    <div class="form">
                        <input class="submit" type="submit" value="Update Info"/>
                    </div>
                    <span class="login">Already have an account?  <a asp-action="Login" asp-controller="User">Login</a></span>

                </form>
            </div>
        </div>
        
    </body>
</html>